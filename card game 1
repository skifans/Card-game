            text = '    legs: '+str(amour_mod_1[3][0])
            message_display_left(text,50,100,15,BLACK)
            text = 'Weapons: '
            message_display_left(text,50,115,15,BLACK)
            text = '    name: '+str(weapon_1[0])
            message_display_left(text,50,130,15,BLACK)
            text = '    attack: '+str(weapon_1[1])
            message_display_left(text,50,145,15,BLACK)
            pygame.display.flip()

        def player_2_stats(health_2, amour_mod_2, weapon_2):
            text = 'Health: ' + str(health_2)
            message_display_left(text,50,25,15,BLACK)
            text = 'Armour: '+str(amour_mod_2[0][0]+amour_mod_2[1][0]+amour_mod_2[2][0]+amour_mod_2[3][0])
            message_display_left(text,50,40,15,BLACK)
            text = '    head: '+str(amour_mod_2[0][0])
            message_display_left(text,50,55,15,BLACK)
            text = '    chest: '+str(amour_mod_2[1][0])
            message_display_left(text,50,70,15,BLACK)
            text = '    arms: '+str(amour_mod_2[2][0])
            message_display_left(text,50,85,15,BLACK)
            text = '    legs: '+str(amour_mod_2[3][0])
            message_display_left(text,50,100,15,BLACK)
            text = 'Weapons: '
            message_display_left(text,50,115,15,BLACK)
            text = '    name: '+str(weapon_2[0])
            message_display_left(text,50,130,15,BLACK)
            text = '    attack: '+str(weapon_2[1])
            message_display_left(text,50,145,15,BLACK)
            pygame.display.flip()

        def player_1_turn(blank):
            global turnstart
            turnstart = False
            wn.fill(BGCOLOR)
            player_1_stats(health_1,amour_mod_1,weapon_1)
            print(deck_1)
            print(hand_1)
            showcardsheld(hand_1)
            pygame.display.flip()
            #hold screen at menu until turn finnished
            global turnstart
            turnstart = True
            while turnstart:
                for event in pygame.event.get():
                    txt_button("End turn", 300, 250, 250, 50, WHITE, GREY, BLACK, player_1_turn,"")
                    txt_button("Close",300,150,200,50,GREEN,DARKGREEN,BLACK,terminate, "") #make close button
                    pygame.display.flip()


        wn.fill(BGCOLOR)
        pygame.display.flip()
        global turnstart
        turnstart = True
        while turnstart:
            for event in pygame.event.get():
                txt_button("Click for Player 1's turn", 200, 200, 250, 50, WHITE, GREY, BLACK, player_1_turn,"")
                pygame.display.flip()
            time.sleep(0.1)

    play_multi('')

